<map proto="1.4.0">
<name>Flag Football: Cola</name>
<version>1.1.2</version>
<objective>Capture the flag as many times as possible in eight minutes!</objective>
<gamemode>ffb</gamemode>
<authors>
    <author uuid="74948888-fdb8-4446-9340-f7688c2435cc"/> <!-- Zero_Frosty -->
</authors>
<contributors>
    <contributor uuid="0c44ca5a-6a42-49b7-81f2-58dc6d2ae3e9"/> <!-- Xerocoles -->
    <contributor uuid="9225421c-3c09-4d97-bb80-f6a77c1f360b"/> <!-- Jexel -->
    <contributor uuid="0a359aef-794b-4d88-97ca-5672d9421532"/> <!-- xTrina -->
</contributors>
<teams>
    <team id="red-team" color="dark red" max="5">Red</team>
    <team id="blue-team" color="blue" max="5">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" material="stone sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true"/>
        <item slot="2" material="arrow" amount="16"/>
        <leggings material="chainmail leggings" enchantment="protection projectile:1" unbreakable="true"/>
        <boots material="iron boots" unbreakable="true"/>
        <game-mode>adventure</game-mode>
        <potion duration="9999" amplifier="255">night vision</potion>
    </kit>
    <kit id="red-kit" parent="spawn-kit">
        <helmet color="993333" unbreakable="true" material="leather helmet"/>
        <chestplate color="993333" unbreakable="true" material="leather chestplate"/>
    </kit>
    <kit id="blue-kit" parent="spawn-kit">
        <helmet locked="true" color="334CB2" unbreakable="true" material="leather helmet"/>
        <chestplate locked="true" color="334CB2" unbreakable="true" material="leather chestplate"/>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="red-kit" yaw="-90">
        <region>
            <point>-38.5,46,-25.5</point>
        </region>
    </spawn>
    <spawn team="blue-team" kit="blue-kit" yaw="90">
        <region>
            <point>9.5,46,-25.5</point>
        </region>
    </spawn>
    <default yaw="90">
        <region>
            <cuboid min="22.5,63,-26.5" max="20.5,63,-24.5"/>
        </region>
    </default>
</spawns>
<respawn delay="4s"/>
<flags>
    <flag id="flag" name="Flag" color="black" shared="true" pickup-filter="above-or-below">
        <post id="center-post" recover-time="8s" respawn-time="4">
            <block>-14.5,39,-25.5</block>
        </post>
        <pickup-kit force="true">
            <potion duration="oo">speed</potion>
        </pickup-kit>
        <drop-kit force="true">
            <potion duration="0">speed</potion>
        </drop-kit>
        <net points="1" region="blue-spawn" capture-filter="only-blue"/>
        <net points="1" region="red-spawn" capture-filter="only-red"/>
    </flag>
</flags>
<score>
    <deaths>0</deaths>
    <kills>0</kills>
</score>
<time>8m</time>
<filters>
    <team id="only-red">red-team</team>
    <team id="only-blue">blue-team</team>
    <all id="red-team-carrying-flag">
        <team>red-team</team>
        <carrying-flag>flag</carrying-flag>
    </all>
    <all id="blue-team-carrying-flag">
        <team>blue-team</team>
        <carrying-flag>flag</carrying-flag>
    </all>
    <any id="above-or-below">
        <not>
            <cuboid min="-17,39,-28" max="-12,37,-23"/>
        </not>
    </any>
</filters>
<regions>
    <union id="spawn-points">
        <point id="red-spawn-point">-38.5,46.25,-25.5</point>
        <point id="blue-spawn-point">9.5,46.25,-25.5</point>
    </union>
    <union id="sides">
        <rectangle id="red-side" min="-20,-34" max="-9,-64"/>
        <rectangle id="blue-side" min="-20,-16" max="-9,13"/>
    </union>
    <union id="nets">
        <union id="red-net">
            <cuboid min="-12,36,-63" max="-17,41,-65"/>
        </union>
        <union id="blue-net">
            <cuboid min="-12,36,12" max="-17,41,14"/>
        </union>
    </union>
    <union id="spawns">
        <cuboid id="red-spawn" min="-36,43,-23" max="-40,49,-27"/>
        <cuboid id="blue-spawn" min="7,43,-23" max="11,49,-27"/>
    </union>
    <apply block="never" region="everywhere" message="You may not edit the map!"/>
</regions>
<proximity-alarms>
    <proximity-alarm message="You are running to the wrong goal!" flare-radius="0" region="blue-side" detect="red-team-carrying-flag" notify="red-team-carrying-flag"/>
    <proximity-alarm message="You are running to the wrong goal!" flare-radius="0" region="red-side" detect="blue-team-carrying-flag" notify="blue-team-carrying-flag"/>
</proximity-alarms>
<portals>
    <portal filter="red-team-carrying-flag" region="red-net" destination="red-spawn-point" yaw="@-90"/>
    <portal filter="blue-team-carrying-flag" region="blue-net" destination="blue-spawn-point" yaw="@90"/>
</portals>
<toolrepair>
    <item>stone sword</item>
    <item>bow</item>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
        <item material="arrow" amount="6"/>
    </kill-reward>
</kill-rewards>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
<hunger>
    <depletion>off</depletion>
</hunger>
<timelock>on</timelock>
</map>
