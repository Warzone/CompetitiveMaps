<map proto="1.4.0" game="Destroy the Wool">
<name>Warlock DTW TE</name>
<version>1.2.3</version>
<objective>Destroy the other team's monument, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="e5953ddf-c1fc-4405-9ac9-6939631cd185"/> <!-- McSpider -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="JSON to XML conversion"></contributor> <!-- TheBestGamer -->
</contributors>
<time>20m</time>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" max="5" max-overfill="5">Blue</team>
    <team id="red-team" color="dark red" max="5" max-overfill="5">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true">iron sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">stone axe</item>
	<item slot="3" amount="64">wood</item>
        <item slot="8" amount="64">cooked beef</item>
        <item slot="28" amount="32">arrow</item>
        <chestplate unbreakable="true">chainmail chestplate</chestplate>
        <boots unbreakable="true">iron boots</boots>
    </kit>
	<kit id="blue-kit" parents="default">
	    <helmet unbreakable="true" color="3C44AA">leather helmet</helmet>
	    <leggings unbreakable="true" color="3C44AA">leather leggings</leggings>
        </kit>
	<kit id="red-kit" parents="default">
	    <helmet unbreakable="true" color="B02E26">leather helmet</helmet>
	    <leggings unbreakable="true" color="B02E26">leather leggings</leggings>
	</kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="145" region="blue-spawn"/>
    <spawn team="red-team" kit="red-kit" yaw="45" region="red-spawn"/>
    <default region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="32%" repairable="false" show-progress="true">
    <destroyable name="Blue Wool" owner="blue-team" sparks="true" materials="wool" region="blue-wool"/>
    <destroyable name="Red Wool" owner="red-team" sparks="true" materials="wool" region="red-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="blue-wool" min="76,6,53"  max="79,10,56"/>
        <cuboid id="red-wool" min="76,6,-68" max="79,10,-71"/>
    </union>
    <union id="spawn-protections">
        <cuboid id="blue-spawn-protection" min="94,0,41" max="113,oo,57"/>
        <cuboid id="red-spawn-protection" min="94,0,-57" max="113,oo,-73"/>
    </union>
    <point id="blue-spawn">99.5,6,50.5</point>
    <point id="red-spawn">99.5,6,-65.5</point>
    <point id="obs-spawn">77.5,18,-7.5</point>
    <negative id="not-map">
        <rectangle id="map" min="35,62" max="122,-79"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map"               block="never"     message="You may not edit outside the map!"/>
    <apply region="spawn-protections"     block="never"     message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection"  enter="red-only"  message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>stone axe</item>
    <item>wood</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>cobblestone</item>
    <item>cobblestone stairs</item>
    <item>step:0</item>
    <item>stained clay</item>
    <item>brick</item>
    <item>sand</item>
    <item>sandstone</item>
    <item>iron barding</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="1">golden apple</item>
        <item amount="1">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<maxbuildheight>22</maxbuildheight>
<crafting>
    <disable>sandstone</disable>
</crafting>
</map>
