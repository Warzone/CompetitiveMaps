<map proto="1.4.2">
<name>Train</name>
<version>1.0.2</version>
<objective>Be the first team to reach 750 points!</objective>
<gamemode>koth</gamemode>
<authors>
    <author uuid="b8add1ba-8e13-4673-bc73-4e3ed524d40e"/> <!-- Blazy -->
</authors>
<teams>
    <team id="blue-team" color="blue" max="5">Blue</team>
    <team id="red-team" color="dark red" max="5">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="10" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="3">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots"/>
        <effect duration="3" amplifier="255">resistance</effect>
        <effect duration="3" amplifier="255">regeneration</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="90">
            <point>68.5,25.1,-50.5</point>
        </region>
    </default>
    <spawn team="blue-team" kit="spawn-kit">
        <region yaw="-90">
            <point>31,5,-67.5</point>
        </region>
    </spawn>
    <spawn team="red-team" kit="spawn-kit">
        <region yaw="-90">
            <point>31,5,-33.5</point>
        </region>
    </spawn>
</spawns>
<filters>
    <team id="only-blue">blue-team</team>
    <team id="only-red">red-team</team>
    <deny id="no-use">
        <material>trap door</material>
    </deny>
</filters>
<regions>
    <cuboid id="point-a" min="66,3,-33" max="73,7,-26"/>
    <cuboid id="mid" min="29,9,-54" max="36,13,-47"/>
    <cuboid id="point-b" min="66,3,-68" max="73,7,-75"/>
    <apply use="no-use" block="never"/>
</regions>
<king>
    <hills required="false" capture-time="5s" points="1" time-multiplier="0" show-progress="true" neutral-state="true" recovery="1" decay="0" permanent="false">
        <hill name="Point A" capture="point-a" progress="point-a"/>
        <hill name="Middle" capture="mid" progress="mid"/>
        <hill name="Point B" capture="point-b" progress="point-b"/>
    </hills>
</king>
<score>
    <limit>750</limit>
</score>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<kill-reward>
    <item material="golden apple"/>
    <item amount="5" material="arrow"/>
</kill-reward>
<respawn delay="4s" auto="true"/>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
